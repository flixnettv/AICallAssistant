<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="16dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Switch
        android:id="@+id/autoReplySwitch"
        android:text="تفعيل الرد التلقائي"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/replyNowButton"
        android:text="رد الآن"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/voiceMaleButton"
        android:text="صوت ذكر"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/voiceFemaleButton"
        android:text="صوت أنثى"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/aiResponseText"
        android:text="الرد من الذكاء الاصطناعي سيظهر هنا"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>