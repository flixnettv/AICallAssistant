<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="16dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/whisperUrl"
        android:hint="Whisper Server URL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/ollamaUrl"
        android:hint="Ollama Server URL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/ollamaModel"
        android:hint="Ollama Model (e.g., llama3)"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/saveButton"
        android:text="حفظ"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/testButton"
        android:text="اختبار الاتصال"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/fetchModelsButton"
        android:text="جلب النماذج من Ollama"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>